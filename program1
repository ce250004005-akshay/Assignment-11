#include<iostream>

int main() {
    int* sales_data = new int[100]; 
    for (int i = 0; i < 100; ++i) {
        sales_data[i] = 0;  
    }
    std::cout << "Original array size: 100" << std::endl;
    int* resized_data = new int[200];  
    for (int i = 0; i < 100; ++i) {
        resized_data[i] = sales_data[i];  
    }
    for (int i = 100; i < 200; ++i) {
        resized_data[i] = 0;
    }
    delete[] sales_data;
    std::cout << "Resized array size: 200" << std::endl;
    delete[] resized_data;

    return 0;
}
